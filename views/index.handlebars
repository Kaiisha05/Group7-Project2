<table id="table_id" class="display">
  <thead>
    <tr>
      <th>Title</title></th>
      <th>Main Ingredient</th>
      <th>Category</th>
      <th>Rating</th>
    </tr>
  </thead>
  <tbody>
    {{#each recipe}}
    <tr>
      <td><a href="/recipe/{{recipe_id}}">
        {{title}}</a></td>
      <td>{{main_ingredient}}</td>
      <td>{{category}}</td>
      <td>{{votes}}</td>
    </tr>
    {{/each}}
  </tbody>
</table>
<script>
  $(document).ready(function () {
    $('#table_id').DataTable();
  });
</script>


